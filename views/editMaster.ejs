<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>KitchenCounter - Edit Master List</title>
</head>
<body>
    <h1><%=user.userName%></h1>
    <h2><%= listName %></h2>
    <a href="../">Return To Dashboard</a>

    <section>
        <ul>
            <%items.forEach(el => {%>
                <li data-itemid=<%=el._id%> data-listid=<%=listId%>>
                    <span><%=el.name%></span>
                    <span>$<%=el.price%></span>
                    <span><%=el.countedBy%></span>
                    <button>Edit</button>
                    <a href="/dashboard/removeItem/?itemId=<%=el._id%>&listId=<%=listId%>">Remove</a>
                </li>
            <%})%>
        </ul>
    </section>

    <form action="/dashboard/addItem/?listId=<%=listId%>" method="POST">
        <input type="text" placeholder="Item Name" name="itemName">
        <input type="number" min="0" step="0.01" placeholder="Price" name="price">
        <select name="countedBy" id="countedBy">
            <option value="Each">Each</option>
            <option value="Lb.">Lb.</option>
            <option value="Case">Case</option>
        </select>
        <input type="submit">
    </form>

    <script src="../../js/editMaster.js"></script>
</body>
</html>